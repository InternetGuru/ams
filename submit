# copy editable files from main
>>>>>>> prod
# shellcheck disable=SC2086
rm ${ACADEMY_EDITABLE}
# shellcheck disable=SC2086
git checkout main -- ${ACADEMY_EDITABLE} 2>/dev/null
# push to submit
git add .
git commit -am "Sync with source and main"
git push "${git_url}" submit
